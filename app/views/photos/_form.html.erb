<%= form_with(model: photo, class: "form-horizontal") do |form| %>
  <% if photo.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h4>
      <ul>
        <% photo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group">
    <%= form.label :images, class: "form-label" %>
    <%= form.file_field :images, class: "form-control", multiple: true %>
    <small class="form-text text-muted">
      <em>If you want to add new images or replace existing ones, please select them here.</em>
    </small>
  </div>

  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
